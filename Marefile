
buildDir = "Build/$(configuration)/$(target)"

targets = {

  zlimdbclient = cppApplication + {
    dependencies = { "libnstd", "liblz4" }
    includePaths = { "Ext/libnstd/include", "Ext/lz4" }
    libPaths = { "Build/$(configuration)/libnstd", "Build/$(configuration)/liblz4" }
    libs = { "nstd", "lz4" }
    root = "Src"
    files = {
      "Src/**.cpp" = cppSource
      "Src/**.h"
    }
    if tool == "vcxproj" {
      libs += { "ws2_32" }
      linkFlags += { "/SUBSYSTEM:CONSOLE" }
    }
    if platform == "Linux" {
      libs += { "pthread", "rt" }
      cppFlags += { "-Wno-delete-non-virtual-dtor" }
    }
  }

  include "Ext/libnstd/libnstd.mare"
  libnstd += {
    folder = "Libraries"
  }

  liblz4 = cppStaticLibrary + {
    folder = "Libraries"
    includePaths = { "Ext/lz4" }
    root = { "Ext/lz4" }
    files = {
      "Ext/lz4/lz4.c" = cSource,
      "Ext/lz4/lz4.h"
    }
  }
}
